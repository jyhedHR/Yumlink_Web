{% extends app.user.role == 'Chef' ? 'chefbase.html.twig' : 'base.html.twig' %}

{% block title %}Meal Plan{% endblock %}

{% block body %}
<section class="inner-banner inner-bg4">
    <div class="container">
        <div class="inner-title text-center">
            <h3>Meal planner</h3>
            <ul>
                <li>
                    <a href="{{ path('app_user_nutrition_index') }}">Dashboard</a>
                </li>
                <li>Analyzer</li>
            </ul>
        </div>
    </div>
</section>

<section class="cart-wraps-area pt-100 pb-70">
    <div class="container">
        <h1 class="text-center">Meal Plan</h1>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Meal</th>
                    <th>Ready in Minutes</th>
                    <th>Servings</th>
                    <th>Calories</th>
                </tr>
            </thead>
            <tbody>
                {% for meal in meals %}
                    <tr>
                        <td>{{ meal['title'] }}</td>
                        <td>{{ meal['readyInMinutes'] }}</td>
                        <td>{{ meal['servings'] }}</td>
                        {# <td>{{ meal['calorie'] }}</td> #}
                    </tr>
                {% endfor %}
                <tr>
                    <td colspan="3" style="text-align: right;">Total:</td>
                    <td>{{ totalCalories }}</td>
                </tr>
            </tbody>
        </table>
    </div>
</section>
{% endblock %}