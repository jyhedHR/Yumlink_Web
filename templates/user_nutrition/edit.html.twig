{% extends 'base.html.twig' %}

{% block title %}Edit Your Information{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Form card styling */
        .form-card {
            width: 400px; /* Set a fixed width */
            max-width: 90%; /* Set maximum width for responsiveness */
        }

        /* Form field styling */
        .form-field {
            margin-bottom: 20px;
            display: flex;
            align-items: center;
        }

        .form-label {
            color: #333;
            font-size: 16px;
            font-weight: bold;
            margin-right: 10px;
            min-width: 100px;
        }

        .form-input {
            padding: 10px;
            border-radius: 8px;
            border: 1px solid #ccc;
            width: 100px;
        }

        /* Button styling */
        .button {
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            font-size: 16px;
            margin-right: 10px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .button:hover {
            filter: brightness(90%);
        }

        /* Back to list button */
        .back-to-list {
            background-color: #28a745;
            color: #fff;
            border: none;
        }

        .back-to-list:hover {
            background-color: #218838;
        }

        /* Update button */
        .update-button {
            background-color: #007bff;
            color: #fff;
            border: none;
        }

        .update-button:hover {
            background-color: #0056b3;
        }

        /* Delete button */
        .delete-button {
            background-color: #dc3545;
            color: #fff;
            border: none;
        }

        .delete-button:hover {
            background-color: #c82333;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="form-card">
            <h2>Edit Your Information</h2>

            {{ include('user_nutrition/_form.html.twig', {'button_label': 'Update', 'button_class': 'button update-button'}) }}

            <a href="{{ path('app_user_nutrition_index') }}" class="button back-to-list">Back to list</a>

            {{ include('user_nutrition/_delete_form.html.twig', {'button_class': 'button delete-button'}) }}
        </div>
    </div>
{% endblock %}
