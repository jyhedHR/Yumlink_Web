        </tbody>
    </table>

    <a href="{{ path('app_user_nutrition_index') }}" class="btn">Back to List</a>

    <a href="{{ path('app_user_nutrition_edit', {'user': user_nutrition.user.getIdu()}) }}" class="btn btn-secondary">Edit</a>

