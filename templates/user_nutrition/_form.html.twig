<div style="display: flex; justify-content: center; align-items: center; height: 130vh; ">
    <div style="background-color: #fff; padding: 40px; border-radius: 20px; box-shadow: 0 0 20px rgba(0, 0, 0, 0.1); font-family: 'Roboto', sans-serif;">
        {{ form_start(form) }}
            <!-- Age field -->
            <div style="margin-bottom: 20px; display: flex; align-items: center;">
                <label for="{{ form.age.vars.id }}" style="color: #333; font-size: 16px; font-weight: bold; margin-right: 10px; min-width: 100px;">Age:</label>
                {{ form_widget(form.age, {'attr': {'class': 'form-control', 'style': 'padding: 10px; border-radius: 8px; border: 1px solid #ccc; width: 100px;'}}) }}
            </div>
            
            <!-- Weight field -->
            <div style="margin-bottom: 20px; display: flex; align-items: center;">
                <label for="{{ form.weight.vars.id }}" style="color: #333; font-size: 16px; font-weight: bold; margin-right: 10px; min-width: 100px;">Weight:</label>
                {{ form_widget(form.weight, {'attr': {'class': 'form-control', 'style': 'padding: 10px; border-radius: 8px; border: 1px solid #ccc; width: 100px;'}}) }}
            </div>
            
            <!-- Height field -->
            <div style="margin-bottom: 20px; display: flex; align-items: center;">
                <label for="{{ form.height.vars.id }}" style="color: #333; font-size: 16px; font-weight: bold; margin-right: 10px; min-width: 100px;">Height:</label>
                {{ form_widget(form.height, {'attr': {'class': 'form-control', 'style': 'padding: 10px; border-radius: 8px; border: 1px solid #ccc; width: 100px;'}}) }}
            </div>
            
            <div style="margin-bottom: 20px; display: flex; align-items: center;">
                <label for="{{ form.activityLevel.vars.id }}" style="color: #333; font-size: 16px; font-weight: bold; margin-right: 10px; min-width: 100px;">Activity Level:</label>
                {{ form_widget(form.activityLevel, {'attr': {'class': 'form-control', 'style': 'padding: 10px; border-radius: 8px; border: 1px solid #ccc; width: 200px;'}}) }}
            </div>

            <div style="margin-bottom: 20px; display: flex; align-items: center;">
                <label for="{{ form.gender.vars.id }}" style="color: #333; font-size: 16px; font-weight: bold; margin-right: 10px; min-width: 100px;">Gender:</label>
                {{ form_widget(form.gender, {'attr': {'class': 'form-control', 'style': 'padding: 10px; border-radius: 8px; border: 1px solid #ccc; width: 200px;'}}) }}
            </div>
            
            <!-- Submit button -->
            <div>
                <button type="submit" style="background-color: #007bff; color: #fff; border: none; padding: 15px 30px; border-radius: 10px; cursor: pointer; font-size: 20px; font-weight: bold;">{{ button_label|default('Save') }}</button>
            </div>
        {{ form_end(form) }}
        
        <!-- Display Calorie, Protein, Carbs, and Fat -->
        <div style="margin-top: 20px;">
            <div>
                <strong>Calorie:</strong> {{ form.vars.value.calorie }}
            </div>
            <div>
                <strong>Protein:</strong> {{ form.vars.value.protein }}
            </div>
            <div>
                <strong>Carbs:</strong> {{ form.vars.value.carbs }}
            </div>
            <div>
                <strong>Fat:</strong> {{ form.vars.value.fat }}
            </div>
        </div>
    </div>
</div>
