{% extends 'base.html.twig' %}

{% block title %}Recettes index{% endblock %}

{% block body %}
<div class="inner-banner inner-bg5">
<div class="container">
<div class="inner-title text-center">
<h3> Recipe</h3>
<ul>
<li>
<a href="index.html">Home</a>
</li>
<li> Recipe</li>
</ul>
</div>
</div>
</div>

<div class="recent-recipe-area pt-100 pb-70">
    <div class="container">
        <div class="section-title text-center">
            <span>Recent Recipe</span>
            <h2>Our Latest Recipe</h2>
        </div>
    </div>

    <div class="container">
        <div class="row pt-45 justify-content-center">
            {% for recette in recettes %}
            <div class="col-lg-4 col-md-6">
                <div class="recent-recipe-item">
                  
                    <a href="{{ path('app_recettes_show', {'idR': recette.idR}) }}">
                        <!-- You can replace the image source with the appropriate URL or use a dynamic source from your entity -->
                        <img src="{{ recette.imgsrc }}" alt="Images">
                    </a>
                    <div class="content">
                        <h3><a href="{{ path('app_recettes_show', {'idR': recette.idR}) }}">{{ recette.nom }}</a></h3>
                        <!-- Add other fields as needed -->
                        <div class="rating">
                            <!-- Add your rating logic here -->
                        </div>
                        <p>{{ recette.description }}</p>
                        <div class="rating">
<i class="bx bxs-star"></i>
<i class="bx bxs-star"></i>
<i class="bx bxs-star"></i>
<i class="bx bxs-star"></i>
<i class="bx bxs-star"></i>
</div>
                        <ul>
                            <li>
                                <!-- You can replace the user image with the appropriate source or use a dynamic source from your entity -->
                                <img src="/assets/images/recipe-img/recipe-user1.jpg" alt="Images">
                            </li>
                            <li><a href="author.html">By {{ recette.chef }}</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>

    <h1>Recettes index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdR</th>
                <th>Nom</th>
                <th>Chef</th>
                <th>Categorie</th>
                <th>Description</th>
                <th>Imgsrc</th>
                <th>Calorie</th>
                <th>Protein</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recette in recettes %}
            <tr>
                <td>{{ recette.idR }}</td>
                <td>{{ recette.nom }}</td>
                <td>{{ recette.chef }}</td>
                <td>{{ recette.categorie }}</td>
                <td>{{ recette.description }}</td>
                <td>{{ recette.imgsrc }}</td>
                <td>{{ recette.calorie }}</td>
                <td>{{ recette.protein }}</td>
                <td>
                    <a href="{{ path('app_recettes_show', {'idR': recette.idR}) }}">show</a>
                    <a href="{{ path('app_recettes_edit', {'idR': recette.idR}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_recettes_new') }}">Create new</a>
{% endblock %}
