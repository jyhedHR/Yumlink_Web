{% extends 'base.html.twig' %}

{% block title %}Recettes index{% endblock %}

{% block body %}
<div class="inner-banner inner-bg5">
<div class="container">
<div class="inner-title text-center">
<h3> Recipe</h3>
<ul>
<li>
<a href="index.html">Home</a>
</li>
<li> Recipe</li>
</ul>
</div>
</div>
</div>

<div class="recent-recipe-area pt-100 pb-70">
    <div class="container">
        <div class="section-title text-center">
            <span>Recent Recipe</span>
            <h2>Our Latest Recipe</h2>
        </div>
    </div>
    <div class="col-lg-4">
    <div class="side-bar-area pl-20">
        <div class="search-widget">
            <input type="search" id="searchInput" class="form-control" placeholder="Search...">
            <div id="searchResults"></div> {# Container for displaying search results #}
        </div>
    </div>
</div>
    <div class="container">
        <div class="row pt-45 justify-content-center">
            {% for recette in recettes %}
            <div class="col-lg-4 col-md-6">
                <div class="recent-recipe-item">
                  
                    <a href="{{ path('app_recettes_show', {'idR': recette.idR}) }}">
                        <!-- You can replace the image source with the appropriate URL or use a dynamic source from your entity -->
                        <img src="{{ recette.imgsrc }}" alt="Images">
                    </a>
                    <div class="content">
                        <h3><a href="{{ path('app_recettes_show', {'idR': recette.idR}) }}">{{ recette.nom }}</a></h3>
                        <!-- Add other fields as needed -->
                        <div class="rating">
                            <!-- Add your rating logic here -->
                        </div>
                        <p>{{ recette.description }}</p>
                        <div class="rating">
<i class="bx bxs-star"></i>
<i class="bx bxs-star"></i>
<i class="bx bxs-star"></i>
<i class="bx bxs-star"></i>
<i class="bx bxs-star"></i>
</div>
                        <ul>
                            <li>
                                <!-- You can replace the user image with the appropriate source or use a dynamic source from your entity -->
                                <img src="/assets/images/recipe-img/recipe-user1.jpg" alt="Images">
                            </li>
                            <li><a href="author.html">By {{ recette.chef }}</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>
<script>
    // JavaScript code for handling search input and displaying search results
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('searchInput');
        const searchResults = document.getElementById('searchResults');

        searchInput.addEventListener('input', function() {
            const query = searchInput.value.trim();
            if (query.length === 0) {
                // Clear the search results container if the search input is empty
                searchResults.innerHTML = '';
                return;
            }

            // Make an AJAX request to your Symfony controller to fetch search results
            const url = '{{ path('search_recipes') }}?query=' + encodeURIComponent(query);
            fetch(url)
                .then(response => response.text())
                .then(html => {
                    // Update the search results container with the fetched HTML
                    searchResults.innerHTML = html;
                })
                .catch(error => console.error('Error fetching search results:', error));
        });
    });
</script>
   
{% endblock %}
