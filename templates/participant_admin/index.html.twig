{% extends 'adminBase.html.twig' %}

{% block title %} Participant {% endblock %}

{% block body %}
<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <h1>Participant</h1>
            <div class="table-responsive rounded">
                <table class="table table-striped table-bordered">
                    <thead class="text-white" style="background-color: #72ae44;">
                        <tr>
                            <th>Idpart</th>
                            <th>PhotoP</th>
                            <th>Vote</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for participant in participants %}
                        <tr>
                            <td>{{ participant.idpart }}</td>
                            <td>{{ participant.photoP }}</td>
                            <td>{{ participant.vote }}</td>
                            <td>
                                <a href="{{ path('app_participant_admin_edit', {'idpart': participant.idpart}) }}" class="btn btn-primary" style="background-color: #0e1125; color: white; border-color: #72ae44; border-radius: 30px; width: 110px;">Modidfier</a>
                                 </br> </br>
                                {{ include('participant_admin/_delete_form.html.twig' ) }}
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="4">No records found</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
