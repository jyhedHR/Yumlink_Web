{% extends 'base.html.twig' %}

{% block title %}Article
{% endblock %}

{% block body %}
	<div class="blog-details-area pt-100 pb-70">
		<div class="container">
			<div class="row">
				<div class="col-lg-8">
					<div class="blog-details-content">
						<div class="blog-preview-img">
							<img src={{ asset(article.imgArticle) }} alt="Blog Images"/>
						</div>
						<ul class="tag-list">
							<li class="active">
								<a href="author.html">
									<i class="bx bx-user"></i>
									{{author}}
								</a>
							</li>
							<li>
								<i class="bx bx-calendar"></i>
								{{ article.datePublished ? article.datePublished|date('Y-m-d H:i:s') : '' }}</li>
							<li>
								<i class="bx bx-comment-dots"></i>
								{{commentsCount}}
								comments</li>
						</ul>
						<h2>{{article.titleArticle}}</h2>
						<p>{{article.descriptionArticle}}</p>

						<div class="article-share">
							<div class="row align-items-center">
								<div class="col-lg-5 col-md-5">
									<div class="article-tag">
										<ul>
											<li class="title">Tags :</li>
											<li>
												<a href="blog-details.html" target="_blank">Health,</a>
