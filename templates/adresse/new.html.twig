{% extends 'base.html.twig' %}

{% block body %}
<div class="inner-banner inner-bg9">
    <div class="container">
        <div class="inner-title text-center">
            <h3>Ajouter votre Adresse</h3>
            <ul>
                <li><a href="index.html">Home</a></li>
                <li>Adresse</li>
            </ul>
        </div>
    </div>
</div>

<div class="user-area pt-100 pb-70">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12">
                <div class="user-all-form">
                    <div class="contact-form">
                        <h3>Ajouter votre adresse!</h3>
                        {# DÃ©but du formulaire Symfony #}
                        {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}

                        {{ form_widget(form._token) }}
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    {{ form_row(form.gouvernorat, {'attr': {'class': 'form-control', 'placeholder': 'Gouvernorat'}}) }}
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    {{ form_row(form.ville, {'attr': {'class': 'form-control', 'placeholder': 'Ville'}}) }}
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    {{ form_row(form.rue, {'attr': {'class': 'form-control', 'placeholder': 'Rue'}}) }}
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    {{ form_row(form.codepostal, {'attr': {'class': 'form-control', 'placeholder': 'Code Postal'}}) }}
                                </div>
                            </div>
                        </div>
                        {# Fin du formulaire Adresse Symfony #}
                        <div class="col-lg-12 col-md-12 text-center d-flex justify-content-center">
                            <button type="submit" class="default-btn">
                                ajouter votre adresse
                            </button>
                        </div>
                        {{ form_end(form) }}
                        
                                    
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a href="{{ path('app_adresse_index') }}">back to list</a>
</div>

{% endblock %}


    

