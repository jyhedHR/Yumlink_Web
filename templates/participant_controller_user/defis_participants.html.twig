{% extends 'base.html.twig' %}

{% block title %}Participants for Defis {{ defisname }} {% endblock %}

{% block body %}
<div class="text-center">
    <img src="{{ asset('assets/images/background.jpg') }}" data-aos="fade-in" class="aos-init aos-animate" alt="" width="1488" height="350">
    <h1>Participants for Defis {{ defisname }} </h1>
</div>

<div class="row">
    {% for participant in participants %}
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <p class="card-text">Participant: {{ participant.user.nom }}</p>
                    <img src="{{ asset(participant.photoP) }}" class="card-img-top mx-auto d-block" alt="..." style="width:300px; height: 200px;">
                    <p class="card-text">Vote: {{ participant.vote }}</p>
                </div>
            </div>
        </div>
    {% else %}
        <p>No participants found for this defis</p>
    {% endfor %}
</div>
<div class="text-center">
    <a href="{{ path('app_participer_defis', {'id': defiId}) }}" class="btn btn-success"  style="background-color: #0e1125; color: white; border-color: #0e1125 ">Ajouter</a>
</div>
{% endblock %}
