{% extends 'base.html.twig' %}

{% block title %}Participant index{% endblock %}

{% block body %}
<div class="text-center">
<img src="{{asset('assets/images/background.jpg')}}" data-aos="fade-in" class="aos-init aos-animate" alt="" width="1488" height="350">
    <h1>Participants</h1>
</div>

    <div class="row">
    {% for participant in participants %}
        <div class="col-md-4 mb-4">
            <div class="card">
             <div class="card-body text-center">
            <p class="card-text">Participant: {{ participant.user.nom }}</p>
                <img src="{{ asset(participant.photoP) }}" class="card-img-top mx-auto d-block" alt="..."style="width:300px; height: 200px;">
               
                    <p class="card-text">Vote: {{ participant.vote }}</p>
                <form method="post" action="{{ path('app_participant_vote', {'idpart': participant.idpart}) }}">
                    <input type="hidden" name="vote" value="{{ participant.vote }}"> 
                    <button type="submit" class="btn btn-primary" style="background-color: #72ae44; color: white; border-color: #72ae44; border-radius: 30px; width: 150px;">Vote</button>
                </form>
                  
                    </br> 
                                {{ include('participant_controller_user/_delete_form.html.twig' ) }}
                </div>
            </div>
        </div>
    {% else %}
        <p>No records found</p>
    {% endfor %}
    </div>

{% endblock %}