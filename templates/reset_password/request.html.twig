{% extends 'WelcomeBase.html.twig' %}

{% block title %}Reset your password
{% endblock %}

{% block body %}
	<div class="inner-banner inner-bg9">
		<div class="container">
			<div class="inner-title text-center">
				<h3>Reset password</h3>
				<ul>
					<li>
						<a href="{{ path('Welcome') }}">Home</a>
					</li>
					<li>Reset Password</li>
				</ul>
			</div>
		</div>
	</div>

	<div class="user-area pt-100 pb-70">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-lg-12">
					<div class="user-all-form">
						<div class="contact-form">
							<h3>Reset Password!</h3>
							{% for flash_error in app.flashes('reset_password_error') %}
								<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
							{% endfor %}

							{{ form_start(requestForm) }}
							<div class="xx form-floating label-width">
								{{ form_widget(requestForm.email,{'attr':{'class':'form-control'}}) }}
								<label class="custom-label" for="floatingInput">Email</label>
							</div>

							<div class="col-lg-12 col-md-12 text-center d-flex justify-content-center">
								<button type="submit" class="default-btn">
									send Email
								</button>
							</div>
							{{ form_end(requestForm) }}
						</div>
					</div>

				</div>
			</div>
		</div>
	</div>


{% endblock %}
