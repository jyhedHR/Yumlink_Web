                <li><a href="wishlist.html"><i class="bx bx-heart"></i></a></li>
                
                    <input type="hidden" name="id_client" value="3">
                    <input type="hidden" name="id_produit" value="{{ produit.id }}">
                    
                    <!-- Add a hidden input field for product name -->
                    <button type="submit" style="border: none; background: none; cursor: pointer;">
                        <i class="bx bx-cart"></i>
                    </button>
                
            </ul>
        </div>
          <td class="product-quantity">
        <div class="input-counter">
            <span class="minus-btn">
                <i class="bx bx-minus"></i>
            </span>
            <input type="number" name="quantite" value="1" inputmode="numeric">
            <!-- type="number" allows only numeric input -->
            <span class="plus-btn">
                <i class="bx bx-plus"></i>
            </span>
        </div>
    </td>
</form>

        <div class="content">
            <h3><a href="shop-details.html">{{ produit.nom }}</a></h3>
            <span>{{ produit.prix ~ "DT" }}</span>

        </div>
    </div>
</div>
{% endfor %}

