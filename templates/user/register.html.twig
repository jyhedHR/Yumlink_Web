{% extends 'WelcomeBase.html.twig' %}

{% block body %}
	<div class="inner-banner inner-bg9">
		<div class="container">
			<div class="inner-title text-center">
				<h3>Register</h3>
				<ul>
					<li>
						<a href="{{ path('Welcome') }}">Home</a>
					</li>
					<li>Register</li>
				</ul>
			</div>
		</div>
	</div>

	<div class="user-area pt-100 pb-70">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-lg-12">
					<div class="user-all-form">
						<div class="contact-form">
							<h3>Create an Account!</h3>

							{{ form_start(userForm, {'attr': {'enctype': 'multipart/form-data'}}) }}

							{{ form_widget(userForm._token) }}
							<div class="row">
								<div class="col-lg-6">
									<div class="form-group">
										{{ form_row(userForm.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
										{{ form_errors(userForm.nom, {'attr': {'class': 'text-danger'}}) }}
									</div>
								</div>
								<div class="col-lg-6">
									<div class="form-group">
										{{ form_row(userForm.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Prénom'}}) }}
										{{ form_errors(userForm.prenom, {'attr': {'class': 'text-danger'}}) }}
									</div>
								</div>
								<div class="col-lg-6">
									<div class="form-group">
										{{ form_row(userForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
										{{ form_errors(userForm.email, {'attr': {'class': 'text-danger'}}) }}
									</div>
								</div>
								<div class="col-lg-6">
									<div class="form-group">
										{{ form_row(userForm.role) }}
										{{ form_errors(userForm.role, {'attr': {'class': 'text-danger'}}) }}
									</div>
								</div>

								<div class="col-lg-6">
									<div class="form-group">
										{{ form_row(userForm.mdp, {'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
										{{ form_errors(userForm.mdp, {'attr': {'class': 'text-danger'}}) }}

									</div>
								</div>
								<div class="col-lg-6">
									<div class="form-group">
										{{ form_row(userForm.tel, {'attr': {'class': 'form-control', 'placeholder': 'Téléphone'}}) }}
										{{ form_errors(userForm.tel, {'attr': {'class': 'text-danger'}}) }}
									</div>
								</div>


								<div class="col-lg-12">
									<div class="form-group">
										{{ form_row(userForm.image, {'attr': {'class': 'form-control', 'placeholder': 'Image'}}) }}
										{{ form_errors(userForm.image, {'attr': {'class': 'text-danger'}}) }}
									</div>
								</div>
							</div>


							<div class="row">
								<div class="col-lg-12 col-md-12">
									<div class="mx-auto" style="width: fit-content;">

										<a href="{{ path('app_adresse_new') }}" class="default-btn two">Ajouter votre adresse</a>
									</div>
								</div>
								<div class="row">
									<div class="col-lg-12">
										<div class="form-group">
											<input type="hidden" id="form_captcha" name="form[captcha]"/>
										</div>
									</div>
								</div>
								<div class="row">
									<div
										class="col-lg-12 col-md-12">
										<!-- Bouton pour soumettre le formulaire -->
										<div class="col-lg-12 col-md-12 text-center d-flex justify-content-center">
											<button type="submit" class="default-btn">
												Register Now
											</button>
										</div>
									</div>
								</div>
								{{ form_end(userForm) }}
								<div class="col-12 text-center">
									<p class="account-desc">
										Already have an account?
										<a href="{{ path('app_login') }}">Log In</a>
									</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
<script>
    var recaptchaCallback_form_captcha = function() {
        grecaptcha.execute('6Lc-DcopAAAAAAHuUCuML8O8pAiVl-d2U4O6UKC1', {action: 'homepage'}).then(function(token) {
            document.getElementById('form_captcha').value = token;
        });
    };
</script>
<script src="https://www.google.com/recaptcha/api.js?render='6Lc-DcopAAAAAAHuUCuML8O8pAiVl-d2U4O6UKC1'&onload=recaptchaCallback_form_captcha" async defer></script>

		{% endblock %}
